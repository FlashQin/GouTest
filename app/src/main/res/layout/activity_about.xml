<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@mipmap/iconapp" />

        <TextView
            android:id="@+id/txtcode"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="版本号1.1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="25dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/len_32"
            android:paddingEnd="@dimen/len_16"
            android:text="清除缓存"
            android:textColor="#4D4D4D"
            android:textSize="13sp"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/tv_cache_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_40"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_yonghu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/len_32"
            android:paddingEnd="@dimen/len_16"
            android:text="用户协议"
            android:textColor="#4D4D4D"
            android:textSize="13sp"
            tools:targetApi="m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_40"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_yinsi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/len_32"
            android:paddingEnd="@dimen/len_16"
            android:text="隐私协议"
            android:textColor="#4D4D4D"
            android:textSize="13sp"
            tools:targetApi="m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_40"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tebie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/len_32"
            android:paddingEnd="@dimen/len_16"
            android:text="特别声明"
            android:textColor="#4D4D4D"
            android:textSize="13sp"
            tools:targetApi="m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_40"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />

    <TextView
        android:id="@+id/tv_clear_protocol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:text="使用帮助"
        android:textColor="#4D4D4D"
        android:textSize="13sp"
        tools:targetApi="m" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />

    <TextView
        android:id="@+id/tv_ys_protocol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableEnd="@mipmap/next_right"
        android:background="@color/white"
        android:drawableTint="@color/colorCCCCCC"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:text="给我评分"
        android:textColor="#4D4D4D"
        android:textSize="13sp"
        tools:targetApi="m" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_EEE" />





    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_exit_login"
        android:layout_width="@dimen/dp_245"
        android:layout_height="@dimen/dp_54"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/len_100"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/selector_bg_login"
        android:enabled="true"
        android:gravity="center"
        android:text="退出登陆"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        android:visibility="gone"
        app:gTouchCornerRadius="@dimen/dp_27" />

</LinearLayout>