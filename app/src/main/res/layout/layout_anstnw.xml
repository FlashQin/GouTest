<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheelSurfView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/dtzq_bg"
            android:paddingBottom="30dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"
            android:paddingTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/rmzhuanqiantuijian"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
              >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#F5F5F5" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/qd_bx" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
              >



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/qd_bx" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#F5F5F5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
              >



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/qd_bx" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#F5F5F5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/qd_bx" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#F5F5F5" />
            </LinearLayout>
        </LinearLayout>
            <FrameLayout
                android:background="@drawable/drawable_login_tv_ok"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="32dp"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/txt_logain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:text="开始答题"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@null"/>

            </FrameLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/drawable_suggst_one"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="活动规则"
                    android:textColor="#2B2B2B"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="24dp"
                    android:text="1.每日最高可获得4000金币\n\n2.每人对多可获得最高30次机会。答错没有奖励\n\n3.每人对多可获得最高30次机会。答错没有奖励\n\n4.每人对多可获得最高30次机会。答错没有奖励\n\n5.每人对多可获得最高30次机会。答错没有奖励"
                    android:textColor="#666666"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
