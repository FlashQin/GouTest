<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:src="@drawable/back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_height="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
               android:src="@mipmap/dengluye_icon_zhanghao"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/et_sms_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:hint="请输入您的手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/wangjimima_icon_hqyzm"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/et_sms_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_login_hint_tv"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginEnd="@dimen/dp_90"
                android:textSize="@dimen/font_14"
                android:layout_marginStart="@dimen/dp_72"
                android:gravity="center_vertical"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_get_sms_code"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_tv_indicator"
                android:text="获取验证码"
                android:layout_marginEnd="@dimen/len_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/dengluye_icon_mima"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请输入密码"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/dengluye_icon_mima"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/edt_passagain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请再次输入密码"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="可通过改手机号找回密码"
            android:textColor="#CCCCCC"
            android:textSize="9sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/store_checkBox"
                android:visibility="visible"
                android:layout_marginStart="0dp"
                android:gravity="center_vertical"
                android:background="@drawable/checkbox_bg"
                android:button="@null"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="我已阅读并同意相关 "
                android:textSize="9sp"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:text="服务条款"
                android:textSize="9sp"
                android:textColor="#E20C0C"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text=" 和 "
                android:textSize="9sp"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_privde"
                android:layout_width="wrap_content"
                android:text="隐私协议"
                android:textSize="9sp"
                android:textColor="#E20C0C"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_ok"
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:layout_height="45dp">



            <TextView
                android:id="@+id/txt_resiger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="立即注册"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@null"/>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
