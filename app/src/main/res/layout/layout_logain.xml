<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:src="@mipmap/fanhui"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_height="24dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="108dp"
           android:layout_centerInParent="true"
            android:src="@mipmap/dengluye_touxiang2x"
            android:layout_height="108dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
               android:src="@mipmap/dengluye_icon_zhanghao"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText

                android:id="@+id/et_sms_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请输入您的手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/dengluye_icon_mima"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请输入密码"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_ok"
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:layout_height="45dp">



            <TextView
                android:id="@+id/txt_logain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="登录"

                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@null"/>

        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_resiger"
                android:layout_width="wrap_content"
                android:text="快速注册"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_forgot"
                android:layout_width="wrap_content"
                android:text="忘记密码"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="#999999"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_wechat"
                android:layout_width="30dp"
                android:background="@mipmap/wd_yqhy_weixin"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
