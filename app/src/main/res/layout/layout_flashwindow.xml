<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:text="服务协议和隐私政策"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:text="请你务必谨慎阅读，充分理解《服务协议》和《隐私政策》各条款，包括但不限于:为了向你提供推送服务和内容分享等服务，我们需要收集你的用户资料,设备信息。"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"

            android:text="你可阅读"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_fuwu"
            android:layout_width="wrap_content"
            android:text="《服务协议》"
            android:textColor="@color/comm_button_blue"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"

            android:text="和"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtyinsi"
            android:layout_width="wrap_content"

            android:text="《隐私政策》"
            android:textColor="@color/comm_button_blue"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="了解详细信息，如你同意，请点击同意开始享受我们的服务"
        android:textColor="#666666"

        android:textSize="14sp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtexit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="暂不使用"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="同意"
            android:textColor="@color/comm_button_blue"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
