<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_suggst_one"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/drawable_suggst_one"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtnums"
                android:layout_width="wrap_content"
                tools:text="订单号: 1366464645165"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#323232"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtstatus"

                android:layout_width="wrap_content"
                tools:text="已结算"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="#A9A9A9"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#F0F0F0"
            android:layout_marginTop="14dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="91dp"
                android:layout_height="91dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="wrap_content"
                    tools:text="订单号: 1366464645165dddddddddddddddddddddddddddddd"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txttime"
                    android:layout_width="wrap_content"
                    tools:text="订单号dsfsdfsdfdsfsdfsdfsdfsdf"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#999999"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        tools:text="实付款￥"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_width="wrap_content"
                        tools:text="12"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E20C0C"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txtfanli"
            android:layout_width="wrap_content"
            tools:text="预估收入￥5"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:textColor="#FF7903"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
