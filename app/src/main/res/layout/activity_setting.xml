<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_clear_cache"
            android:text="清除缓存"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16"
            android:gravity="center_vertical"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:paddingStart="@dimen/len_32"
            android:paddingEnd="@dimen/len_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/tv_cache_number"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_333"
            android:text="20kb"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <TextView
        android:id="@+id/tv_clear_protocol"
        android:text="用户协议"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        tools:targetApi="m" />
    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <TextView
        android:id="@+id/tv_ys_protocol"
        android:text="隐私协议"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        tools:targetApi="m" />
    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <TextView
        android:id="@+id/tv_des"
        android:text="平台介绍"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        tools:targetApi="m" />
    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <RelativeLayout
        android:id="@+id/relcode"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_about"
            android:text="关于勾转"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_16"
            android:gravity="center_vertical"
            android:drawableTint="@color/colorCCCCCC"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            tools:targetApi="m" />
        <TextView
            android:id="@+id/tv_code"
            android:text="版本号 2.0.2"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawableEnd="@mipmap/next_right"
            android:drawableTint="@color/colorCCCCCC"
            android:drawablePadding="4dp"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            tools:targetApi="m" />
    </RelativeLayout>

    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <TextView
        android:id="@+id/tv_app_critical"
        android:text="应用评分"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        tools:targetApi="m" />

    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <TextView
        android:id="@+id/tv_app_share"
        android:text="分享应用"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:drawableEnd="@mipmap/next_right"
        android:drawableTint="@color/colorCCCCCC"
        android:paddingStart="@dimen/len_32"
        android:paddingEnd="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        tools:targetApi="m" />

    <View
        android:background="@color/color_EEE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5" />

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_exit_login"
        android:text="退出登陆"
        android:textColor="@color/white"
        app:gTouchCornerRadius="@dimen/dp_27"
        android:background="@drawable/selector_bg_login"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        android:enabled="true"
        android:visibility="gone"
        android:layout_marginTop="@dimen/len_100"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:layout_width="@dimen/dp_245"
        android:layout_height="@dimen/dp_54" />

</LinearLayout>