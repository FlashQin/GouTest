<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:src="@mipmap/fanhui"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_height="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="45dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
               android:src="@mipmap/dengluye_icon_zhanghao"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/et_sms_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:hint="请输入您的手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/wangjimima_icon_hqyzm"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>
        <FrameLayout
            android:background="@drawable/drawable_login_tv_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@mipmap/dengluye_icon_mima"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <EditText
                android:id="@+id/edt_passagain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#CCCCCC"
                android:hint="请再次输入密码"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_gravity="center_vertical"
                android:background="@null"/>

        </FrameLayout>

        <FrameLayout
            android:background="@drawable/drawable_login_tv_ok"
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:layout_height="45dp">



            <TextView
                android:id="@+id/txt_resiger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="立即注册"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@null"/>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
